<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JacobC.Xiami.App">

    <LinearGradientBrush x:Key="TitleColorBrush">
        <GradientStop Color="#FA8723" Offset="0"/>
        <GradientStop Color="#F57614" Offset="1"/>
    </LinearGradientBrush>
    <Color x:Key="ThemeColor">#F60</Color> <!-- 等价于FF6600 -->
    <Color x:Key="InactiveThemeColor">#FFB380</Color>
    <Color x:Key="HighlightThemeColor">#FFA200</Color>
    <Color x:Key="DarkColor">#3A3935</Color>
    <Color x:Key="ForeColor">#333</Color>
    <Color x:Key="BackColor">#F5F5F5</Color>
    <SolidColorBrush x:Key="BackColorBrush" Color="{StaticResource BackColor}" />
    <Color x:Key="DisableColor">#999</Color>
    <Color x:Key="ContrastColor">#1ABC9C</Color>
    <Color x:Key="IconColor">#FF5E00</Color>
    
</ResourceDictionary>
